<div class="row">
	<div class="col-md-6">
		<%= form_for Comment.new, url: article_comment_index_path(@article.id) do |f| %>
			<div class="form-group">
				<%= f.text_field :msg , autofocus: true, class: 'form-control', placeholder: type,
			 	required: true %>
			 	<% if type == 'reply' %>
			 		<%= f.hidden_field :id, value: comment %>
			 	<% end %>
			</div>
			<div class="row">
			  <div class="form-group">
			    <div class="col-md-6">
			      <button type="submit" class="btn btn-sm btn-warning"><%= type %></button>
			    </div>
			  </div> 
			</div>
		<% end %>
	</div>
</div>

<script type="text/x-handlebars-template" id="replyForm">
	<div class="row">
		<div class="col-md-6">
			<form class="new_comment" id="new_comment" action="{{path}}" method="post">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<div class="form-group">
				 	<input type="text" name="comment[msg]" placeholder="{{type}}" required="required" id="comment_msg"
				 	 class="comment_msg form-control">
				 	<input type="hidden" name="comment[id]" value={{commentId}} id="comment_id"
				 	 class="comment_id">
				</div>
				<div class="row">
				  <div class="form-group">
				    <div class="col-md-6">
				      <button type="submit" class="btn btn-sm btn-warning">comment</button>
				    </div>
				  </div> 
				</div>
			</form>
		</div>
	</div>
</script>

