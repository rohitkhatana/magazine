<div class="row">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
	    		<h3 class="panel-title"><%= @article.title%></h3>
	  		</div>
	  	</div>
	  	<div class="panel panel-body main-panel">
	  		<p>
	  			<%= @article.body %>
	  		</p>
	  		<hr>
			<h5>Comments</h5>
	  		<%= render partial: 'comment/partials/comment', locals: {comments: @comments}  %>
	  	</div>
	  	<div class="panel-footer">
	  		<%= render partial: 'comment/partials/form', locals: {type: 'comment', comment: nil} %>
	  	</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		registerWithReply();
	});
</script>